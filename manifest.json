{
  "name": "QRL",
  "version": "0.0.5",
  "description": "QRL creates a Browser Action that displays a popup containing a QR code of the current tab's URL.",
  "icons": { "16":  "icon16.png",
             "48":  "icon48.png",
             "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "QRL",
    "popup": "popup.html" },
  "permissions": [ 
    "tabs", "http://*/*", "https://*/*"
   ],
  "options_page": "options.html"
}

